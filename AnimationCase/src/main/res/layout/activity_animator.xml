<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.flexbox.FlexboxLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btValueAnim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="valueAnim"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btObjectAnim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="objectAnim"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="自定义动画属性"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btTypeEvaluator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="TypeEvaluator"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btPropertyValuesHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="PropertyValuesHolder"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="关键帧"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btViewPropertyAnimator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="ViewPropertyAnimator"/>


    </com.google.android.flexbox.FlexboxLayout>

    <ImageView
        android:id="@+id/ivMusic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_music1"/>

    <com.clow.animation_case.weidgt.CircleProgressView
        android:id="@+id/circleProgressView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/tvArgb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:text="argb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black"
        />



</androidx.constraintlayout.widget.ConstraintLayout>