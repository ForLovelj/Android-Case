<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivMusic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_music1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btAlpha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="渐变"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btScale"
        app:layout_constraintStart_toEndOf="@id/btAlpha"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="缩放"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btRotation"
        app:layout_constraintStart_toEndOf="@id/btScale"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋转"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btTranslate"
        app:layout_constraintStart_toEndOf="@id/btRotation"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平移"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btSet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btAlpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="组合"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btFrame"
        app:layout_constraintStart_toEndOf="@id/btSet"
        app:layout_constraintTop_toTopOf="@id/btSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帧动画"/>


</androidx.constraintlayout.widget.ConstraintLayout>